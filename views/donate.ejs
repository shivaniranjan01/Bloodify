<%- include("./partials/header") %>
    <script>
        function validateForm() {
            var x = document.forms["myForm"]["isDiabetic"].value;
            if (x == "yes") {
                alert("Since you,re sorry but you can't donate blood");
                return false;
            }
        }
    </script>
    <div class="donateimage">

    </div>
    
    <div class="donateform">
        <div class="form ">
            <form name="myForm" action="/donate" onsubmit="return validateForm()" method="POST">
                <input type="text" name="name" value="<%= currentUser.username %>"><br>
                <label>Are you diabetic?</label><br>
                <input style="width:20%" type="radio" id="yes" name="isDiabetic" required value="yes">
                <label style="width:20%" for="yes">yes</label>
                <input style="width:20%" type="radio" id="no" name="isDiabetic" value="no">
                <label style="width:20%" for="no">no</label>
                <input type="number" name="weight" placeholder="Enter your weight" min=50 required><br>
                <input type="number" name="units" placeholder="Units of blood" min=1 max=5 required><br>

                <label for="bg">Choose your blood group</label>
                <select name="bloodGroup" id="bg" required>
                    <option value="">none</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="O">O</option>
                    <option value="AB">AB</option>
                </select>
                <br>
                <br>


                <label for="rh">rh facter</label>
                <select name="rhFactor" id="rh" required>
                    <option value="">none</option>
                    <option value="positive">+</option>
                    <option value="negative">-</option>
                </select><br>
                <br>
                <button>Donate</button>
            </form>
        </div>
    </div>

    <%- include("./partials/footer") %>